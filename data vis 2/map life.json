{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {"text":"Global Life Expectancy","fontSize":20},
    "width": 830,
    "height": 420,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/rivaldipur/fit3179/main/ne_110m_admin_0_countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/rivaldipur/fit3179/main/world_data_2023.csv"
          },
          "key": "Country",
          "fields": ["Density_(P/Km2)","Life_expectancy", "Official_language"]
        }
      }
      
    ],
    "layer":[
      {
        "transform": [
          {
            "calculate": "'Data is not available in ' + datum.properties.NAME",
            "as": "note"
          }
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "encoding": {"tooltip": {"field": "note"}}
      },
      {
      "data": {
        "url": "https://raw.githubusercontent.com/rivaldipur/fit3179/main/ocean_graticule.topojson",
        "format": {"type": "topojson", "feature": "ocean_graticule"}
      },
      "mark": {"type": "geoshape", "fill": "lightskyblue"}
    },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
      },
    {
      "mark": {"type": "geoshape", "strokeWidth": 0.85,"stroke":"whitesmoke"},
      "encoding": {
      "color": {
        "field": "Life_expectancy",
        
        "type": "quantitative",
        "scale":{
            "type": "threshold",
            "domain": [60,65,70, 75, 80, 85,90],
            "range": ["#9AC296", "#7DB079", "#528C4C", "#3B7635","#315823", "#13400E","#092A05","#0C200A"]
        },
        "legend": {"title": "Life Expectancy", "labelFontSize":10}
      },
      
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "Life_expectancy", "type": "quantitative"},
        {"field": "Official_language", "type":"nominal"}
        
      ]
      }
    },
    
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 240,
        "dy": 65,
        "fontSize": 15,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"value": "Australia"},
        "color": {"value": "white"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 55,
        "dy": -150,
        "fontSize": 15,
        "fontStyle": "italic"
      },
      "encoding": {"text": {"value": "Europe"}, "color": {"value": "white"}}
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 13,
        "dy": -47,
        "fontSize": 15,
        "fontStyle": "italic"
      },
      "encoding": {"text": {"value": "Africa"}, "color": {"value": "white"}}
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": -220,
        "dy": -115,
        "fontSize": 13,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"value": "North America"},
        "color": {"value": "white"}

      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": -160,
        "dy":20,
        "fontSize": 13,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"value": "South America"},
        "color": {"value": "white"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 180,
        "dy": -95,
        "fontSize": 15,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"value": "Asia"},
        "color": {"value": "white"}
      }
    }

    ],
    
    "config": {
        "background": "floralwhite",

        "legend": {
          "titleFontSize": 12,

          "direction": "horizontal",
          "orient": "bottom",
          "offset":-60
         
        }
    }
    
    
   
}
  