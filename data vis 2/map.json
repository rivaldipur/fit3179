{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {"text":"Maternal Mortality Ratio in Different Countries","fontSize":20},
    "width": 800,
    "height": 500,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/rivaldipur/fit3179/main/ne_110m_admin_0_countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/rivaldipur/fit3179/main/world_data_2023.csv"
          },
          "key": "Country",
          "fields": ["Agricultural_Land(%)", "Density_(P/Km2)", "Land_Area(Km2)", 
                    "Armed_Forces_size","Birth_Rate","Infant mortality","Official_language",
                    "Population", "GDP_in_USD","Life_expectancy", "Physicians_per_thousand","Maternal_mortality_ratio"]
        }
      },
      {"calculate": "datum.Armed_Forces_size/datum.Population * 10000", "as": "Armed Forces per 10,000 population"},
      {"calculate": "datum.Physicians_per_thousand*100 - datum.Maternal_mortality_ratio", "as": "health index"}
      
    ],
    "layer":[
      {
      "data": {
        "url": "https://raw.githubusercontent.com/rivaldipur/fit3179/main/ocean_graticule.topojson",
        "format": {"type": "topojson", "feature": "ocean_graticule"}
      },
      "mark": {"type": "geoshape", "fill": "deepskyblue"}
    },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
      },
    {
      "mark": {"type": "geoshape", "strokeWidth": 0.8,"stroke":"whitesmoke"},
      "encoding": {
      "color": {
        "field": "Maternal_mortality_ratio",
        "type": "quantitative",
        "scale":{
            "type": "threshold",
            "domain": [10,20,50, 80, 160, 250,400,800],
            "range": ["#FFCDC3", "#FCB2A3", "#FF927C", "#FF6D4F","#FF360E", "#B01D00","#6A1200","#400E04", "#1E0000"]
        }
      },
      
      "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Official_language", "type": "nominal", "title":"Main Language"},
          {"field": "Density_(P/Km2)", "type": "quantitative", "title": "Density (Population/Km2)"},
          {"field": "Life_expectancy", "type": "quantitative"},
          {"field": "Physicians_per_thousand", "type": "quantitative"},
          {"field": "Maternal_mortality_ratio","type": "quantitative"}

        ]
      }
      
    }

    ]
    
   
}
  