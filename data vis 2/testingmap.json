{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Youtubers in the World",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/rivaldipur/fit3179/main/ne_110m_admin_0_countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/rivaldipur/fit3179/main/Global%20YouTube%20Statistics.csv"
          },
          "key": "Country",
          "fields": ["subscribers", "video views", "category", "uploads"]
        }
      }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
        "color": {
            "field": "subscribers",
            "type": "quantitative",
            "scale": {
                    "type":"sequential",
                    "domain": [150000000, 300000000,700000000,1000000000],
                    "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a20000"]
                },
            "title": "Subscribers"
          },
        
        "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "subscribers", "type": "quantitative"},
            {"field": "video views", "type": "quantitative"},
            {"field": "category", "type": "nominal"},
            {"field": "uploads", "type": "nominal"},
            {"field": "numYouTubers", "type": "quantitative", "title": "Number of YouTubers"}
          ]

    }
    
}
  